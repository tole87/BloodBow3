<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.miguel.bludbuwl">

    <uses-permission android:name="android.permission.WRITE_INTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@drawable/icono_launcher"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.GestionEquipoMenuActivity"
            android:label="@string/title_activity_gestion_equipo_menu"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.GuiaEquiposActivity"
            android:label="@string/title_activity_guia_equipos"
            android:screenOrientation="landscape" />
        <activity
            android:name=".activity.CreacionEquiposListaActivity"
            android:label="@string/title_activity_creacion_equipos_lista" />
        <activity
            android:name=".activity.RosterInicialActivity"
            android:label="@string/roster_inicial"
            android:screenOrientation="landscape" />
        <activity android:name=".activity.MostrarAlineacionesActivity" />
        <activity android:name=".activity.ClimaActivity" />
        <activity android:name=".activity.EleccionEquiposPartidaActivity" />
        <activity android:name=".activity.PatadaInicialActivity" />
        <activity android:name=".activity.SeleccionarCronometro" />
        <activity
            android:name=".activity.GestionPartido"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".moneda.MonedaActivity"></activity>
    </application>

</manifest>