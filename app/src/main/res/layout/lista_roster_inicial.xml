<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/posicion"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            tools:text="linea" />

        <TextView
            android:id="@+id/salario"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            tools:text="140000" />

        <TextView
            android:id="@+id/movimiento"
            style="@style/Text_View_Roster_inicial"
            tools:text="6" />

        <TextView
            android:id="@+id/fuerza"
            style="@style/Text_View_Roster_inicial"
            tools:text="6" />

        <TextView
            android:id="@+id/agilidad"
            style="@style/Text_View_Roster_inicial"
            tools:text="6" />

        <TextView
            android:id="@+id/armadura"
            style="@style/Text_View_Roster_inicial"
            tools:text="6" />

        <TextView
            android:id="@+id/habilidades"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            tools:text="Habilidades" />

        <Button
            android:id="@+id/suma_jugador"
            android:layout_width="30dp"
            android:layout_height="35dp"
            android:text="+" />

        <TextView
            android:id="@+id/contador_jugador"
            style="@style/Text_View_Roster_inicial"
            android:textAlignment="center"
            tools:text="0" />

        <Button
            android:id="@+id/resta_jugador"
            android:layout_width="30dp"
            android:layout_height="35dp"
            android:layout_marginRight="40dp"
            android:text="-" />

    </LinearLayout>
</LinearLayout>