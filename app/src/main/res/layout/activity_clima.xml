<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/centro"
    tools:context=".activity.ClimaActivity">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="29dp"
        android:text="Tirada Clima"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="55dp"
        android:layout_height="39dp"
        android:layout_above="@+id/nombre_alineacion"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:layout_marginBottom="-108dp"
        android:text="2D6"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:textStyle="bold" />

    <EditText

        android:id="@+id/tirada_clima"
        android:layout_width="55dp"
        android:layout_height="39dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="112dp"
        android:background="@color/white"
        android:inputType="number"
        android:textColor="#BDBDBD"
        android:textColorHint="@drawable/selector" />

    <TextView
        android:id="@+id/nombre_clima"
        android:layout_width="344dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="213dp"
        android:textAlignment="center"
        tools:text="Clima"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:textStyle="bold"
        android:background="@color/lightgrey"
        android:padding="8dp"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/descripcion_clima"
        android:layout_width="344dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="253dp"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:background="@color/lightgrey"
        tools:text="Descipcion clima"
        android:padding="8dp"
        android:visibility="invisible"
       />

    <Button
        android:id="@+id/boton_continuar_clima"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="Continuar"
        android:onClick="abrirTiradaHinchas"
        android:visibility="invisible"/>


</RelativeLayout>